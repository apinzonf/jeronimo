  ISSN                     = {0730-0301},
  Issue_date               = {July 2011},
  Keywords                 = {discrete Laplace operator, generalized cotan formula, geometry processing with polygonal meshes},
  Numpages                 = {10},
  Owner                    = {apinzonf},
