  ISSN                     = {0010-4485},
  Issue_date               = {January, 2011},
  Keywords                 = {Geometric modeling, Layered Depth-Normal Images, Offset surfaces, Point-sampled geometry, Trimming self-intersections},
  Numpages                 = {16},
